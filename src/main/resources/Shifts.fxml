<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="993.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.ShiftViewController">

    <!-- Heading -->
    <Label layoutX="40.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Shifts" />

    <!-- Table -->
    <TableView fx:id="shiftTable" layoutX="153.0" layoutY="70.0" prefHeight="350.0" prefWidth="713.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="60" text="ID" />
            <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
            <TableColumn fx:id="colStartTime" prefWidth="150" text="Start Time" />
            <TableColumn fx:id="colEndTime" prefWidth="150" text="End Time" />
            <TableColumn fx:id="colOvertime" prefWidth="201.60000000000002" text="Overtime" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <HBox layoutX="40.0" layoutY="440.0" spacing="20.0" />
    <Button layoutX="666.0" layoutY="470.0" onAction="#handleDeleteShift" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #C20010;" text="Delete Shift" textFill="WHITE" />
    <Button layoutX="435.0" layoutY="470.0" onAction="#handleUpdateShift" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #26AD00;" text="Update Shift" textFill="WHITE" />
    <Button layoutX="210.0" layoutY="470.0" onAction="#handleAddShift" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #26AD00;" text="Add Shift" textFill="WHITE" />

</AnchorPane>