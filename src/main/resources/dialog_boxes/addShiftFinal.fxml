<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.ShiftFormController">
   <VBox alignment="TOP_CENTER" layoutX="25.0" prefHeight="400.0" prefWidth="350.0" spacing="10.0">
      <children>
      
          <!-- Heading -->
          <Label fx:id="headerLabel" alignment="CENTER" contentDisplay="CENTER" prefWidth="320.0" style="-fx-font-weight: bold;" text="Add Shift" textAlignment="CENTER">
            <font>
               <Font size="28.0" />
            </font>
            <VBox.margin>
               <Insets bottom="20.0" top="10.0" />
            </VBox.margin>
         </Label>
         <HBox prefHeight="20.0">
            <children>
            
                <!-- Employee -->
                <Label prefHeight="20.0" prefWidth="100.0" text="Employee:" />
                <ComboBox fx:id="employeeComboBox" prefWidth="200.0" promptText="Select Employee" />
            </children>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </HBox>
         <HBox fillHeight="false" prefHeight="20.0" prefWidth="300.0">
            <children>
            
                <!-- Shift Date -->
                <Label alignment="BOTTOM_LEFT" prefHeight="20.0" prefWidth="100.0" text="Shift Date:" />
                <DatePicker fx:id="datePicker" prefHeight="10.0" prefWidth="200.0" />
            </children>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </HBox>
         <HBox prefHeight="20.0">
            <children>
            
                <!-- Start Time -->
                <Label prefHeight="20.0" prefWidth="100.0" text="Start Time:" />
                <Spinner fx:id="spinnerStartHour" prefWidth="80.0" />
                <Label alignment="CENTER" prefWidth="40.0" text=":">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                <Spinner fx:id="spinnerStartMinute" prefWidth="80.0" />
            </children>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </HBox>
         <HBox prefHeight="20.0">
            <children>
            
                <!-- End Time -->
                <Label prefHeight="20.0" prefWidth="100.0" text="End Time:" />
                <Spinner fx:id="spinnerEndHour" prefWidth="80.0" />
                <Label alignment="CENTER" prefWidth="40.0" text=":">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                <Spinner fx:id="spinnerEndMinute" prefWidth="80.0" />
            </children>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </HBox>
         <HBox prefHeight="20.0">
            <children>
            
                <!-- Overtime -->
                <Label prefHeight="20.0" prefWidth="100.0" text="Overtime:" />
                <CheckBox fx:id="chkOvertime" />
            </children>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
         </HBox>
         <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
            
                <!-- Buttons -->
                <Button fx:id="btnSave" onAction="#handleSave" prefHeight="40.0" prefWidth="145.0" style="-fx-background-color: #2fa0e8;" text="Save" textFill="WHITE">
                  <font>
                     <Font size="14.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Button>
                <Button fx:id="btnCancel" alignment="CENTER" onAction="#handleCancel" prefHeight="40.0" prefWidth="145.0" style="-fx-background-color: black;" text="Cancel" textFill="WHITE">
                  <font>
                     <Font size="14.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
         </HBox>
      </children>
      <padding>
         <Insets left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>

</AnchorPane>
