<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #45b6fe;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.PaymentFormController">
    <VBox prefHeight="364.0" prefWidth="320.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0" alignment="CENTER" spacing="20">

        <!-- Heading -->
        <Label alignment="CENTER" prefHeight="35.0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="Add Payment" />

        <!-- Input Fields -->
        <VBox alignment="CENTER" spacing="30">
            <TextField fx:id="txtAmount" promptText="Amount" prefWidth="200" maxWidth="200" />
            <ChoiceBox fx:id="choiceMethod" prefWidth="250.0" value="Select Payment Method" />
            <ChoiceBox fx:id="choiceStatus" prefWidth="250.0" value="Select Payment Status" />
            <DatePicker fx:id="datePicker" prefWidth="250.0" />
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnSave" onAction="#handleSave" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #398F6C;" text="Save" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>

            <Button fx:id="btnCancel" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #E02850;" text="Cancel" textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
