<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="400.0" maxWidth="400.0" minHeight="400.0"
            minWidth="400.0" prefHeight="400.0"
            style="-fx-background-color: white;"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.PaymentFormController">

    <VBox prefHeight="364.0" prefWidth="320.0"
          AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="40.0"
          AnchorPane.rightAnchor="40.0"
          AnchorPane.topAnchor="20.0"
          alignment="CENTER" spacing="20">

        <!-- Heading -->
        <Label alignment="CENTER"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #45b6fe;"
               text="Add A Payment"
               maxWidth="Infinity" />

        <!-- Input Fields -->
        <VBox alignment="CENTER" spacing="15">
            <!-- Amount field -->
            <TextField fx:id="txtAmount"
                       promptText="Amount"
                       prefHeight="37.0" prefWidth="260.0"
                       maxWidth="260.0"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;" />

            <!-- ChoiceBox Method with prompt-text style -->
            <ChoiceBox fx:id="choiceMethod"
                       prefHeight="37.0" prefWidth="260.0" maxWidth="260.0"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;"
                       value="Select Payment Method" />

            <!-- ChoiceBox Status with prompt-text style -->
            <ChoiceBox fx:id="choiceStatus"
                       prefHeight="37.0" prefWidth="260.0" maxWidth="260.0"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;"
                       value="Select Payment Status" />

            <!-- Date Picker with prompt text -->
            <DatePicker fx:id="datePicker"
                        promptText="Payment Date"
                        prefHeight="37.0" prefWidth="260.0" maxWidth="260.0"
                        style="-fx-background-radius: 0; -fx-border-radius: 0;" />
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnSave"
                    onAction="#handleSave"
                    prefHeight="40.0" prefWidth="120.0"
                    text="Save"
                    style="-fx-background-color: #45b6fe; -fx-text-fill: white; -fx-background-radius: 0;">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>

            <Button fx:id="btnCancel"
                    onAction="#handleCancel"
                    prefHeight="40.0" prefWidth="120.0"
                    text="Cancel"
                    style="-fx-background-color: #cc000a; -fx-text-fill: white; -fx-background-radius: 0;">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
