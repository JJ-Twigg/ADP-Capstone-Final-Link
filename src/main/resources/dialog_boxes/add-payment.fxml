<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.PaymentFormController">
   <VBox prefHeight="364.0" prefWidth="320.0" AnchorPane.bottomAnchor="-14.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0">
      <children>
      
         <!-- Heading -->
         <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Add Payment">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Label>
         <Pane prefHeight="245.0" prefWidth="320.0">
            <children>
            
               <!-- Amount -->
               <Label layoutY="5.0" text="Amount:" />
               <TextField fx:id="txtAmount" layoutX="100.0" prefWidth="200.0" />
            
               <!-- Method -->
               <Label layoutY="65.0" text="Method:" />
               <ChoiceBox fx:id="choiceMethod" layoutX="100.0" layoutY="60.0" prefWidth="200.0" />
            
               <!-- Status -->
               <Label layoutY="125.0" text="Status:" />
               <ChoiceBox fx:id="choiceStatus" layoutX="100.0" layoutY="120.0" prefWidth="200.0" />
            
               <!-- Date -->
               <Label layoutY="185.0" text="Date:" />
               <DatePicker fx:id="datePicker" layoutX="100.0" layoutY="180.0" prefWidth="200.0" />
            </children>
         </Pane>
         <HBox prefHeight="61.0" prefWidth="320.0">
            <children>
            
               <!-- Buttons -->
               <Button fx:id="btnSave" onAction="#handleSave" prefHeight="40.0" prefWidth="143.0" style="-fx-background-color: #26AD00;" text="Save" textFill="WHITE">
                  <HBox.margin>
                     <Insets right="20.0" />
                  </HBox.margin>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            
               <Button fx:id="btnCancel" onAction="#handleCancel" prefHeight="40.0" prefWidth="136.0" style="-fx-background-color: #C20010;" text="Cancel" textFill="WHITE">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </HBox>
      </children>
   </VBox>

</AnchorPane>
