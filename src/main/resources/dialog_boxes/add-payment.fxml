<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="400.0" maxWidth="400.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.PaymentFormController">

     <!-- Heading -->
     <Label alignment="CENTER" layoutX="127.0" layoutY="26.0" maxWidth="Infinity" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #66BA88;" text="Add A Payment" />

     <!-- Label to show price from database -->
     <Label fx:id="lblPrice" alignment="CENTER_LEFT" layoutX="118.0" layoutY="78.0" maxWidth="260.0" prefHeight="20.0" prefWidth="166.0" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Price from database: 0.0" />
      <!-- Amount field -->
      <TextField fx:id="txtAmount" layoutX="157.0" layoutY="117.0" maxWidth="260.0" prefHeight="38.0" prefWidth="173.0" style="-fx-background-radius: 0; -fx-border-radius: 0;" />

      <!-- ChoiceBox Method with prompt-text style -->
      <ChoiceBox fx:id="choiceMethod" layoutX="70.0" layoutY="170.0" maxWidth="260.0" prefHeight="37.0" prefWidth="260.0" style="-fx-background-radius: 0; -fx-border-radius: 0;" value="Select Payment Method" />

      <!-- ChoiceBox Status with prompt-text style -->
      <ChoiceBox fx:id="choiceStatus" layoutX="70.0" layoutY="223.0" maxWidth="260.0" prefHeight="37.0" prefWidth="260.0" style="-fx-background-radius: 0; -fx-border-radius: 0;" value="Select Payment Status" />

      <!-- Date Picker with prompt text -->
      <DatePicker fx:id="datePicker" layoutX="70.0" layoutY="277.0" maxWidth="260.0" prefHeight="37.0" prefWidth="260.0" promptText="Payment Date" style="-fx-background-radius: 0; -fx-border-radius: 0;" />
      <Button fx:id="btnSave" layoutX="54.0" layoutY="334.0" onAction="#handleSave" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #66BA88; -fx-text-fill: white; -fx-background-radius: 0;" text="Save">
          <cursor>
              <Cursor fx:constant="HAND" />
          </cursor>
      </Button>

      <Button fx:id="btnCancel" layoutX="226.0" layoutY="334.0" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #cc000a; -fx-text-fill: white; -fx-background-radius: 0;" text="Cancel">
          <cursor>
              <Cursor fx:constant="HAND" />
          </cursor>
      </Button>
   <Label layoutX="70.0" layoutY="128.0" text="Amount:" />
</AnchorPane>
