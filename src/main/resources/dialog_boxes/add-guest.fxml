<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.AddEditGuestController"
            prefWidth="400" prefHeight="450"
            style="-fx-background-color: white;">

    <VBox AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20" alignment="CENTER" spacing="20">

        <!-- Heading -->
        <Label text="Add Guest"
               alignment="CENTER"
               maxWidth="Infinity"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #45b6fe;" />

        <!-- Input Fields -->
        <VBox alignment="CENTER" spacing="15">
            <TextField fx:id="txtID" promptText="Guest ID" editable="false"
                       prefWidth="260" minWidth="260" maxWidth="260" prefHeight="37"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;" />
            <TextField fx:id="txtName" promptText="Name"
                       prefWidth="260" minWidth="260" maxWidth="260" prefHeight="37"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;" />
            <TextField fx:id="txtSurname" promptText="Surname"
                       prefWidth="260" minWidth="260" maxWidth="260" prefHeight="37"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;" />
            <TextField fx:id="txtEmail" promptText="Email"
                       prefWidth="260" minWidth="260" maxWidth="260" prefHeight="37"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;" />
            <TextField fx:id="txtContact" promptText="Contact Number"
                       prefWidth="260" minWidth="260" maxWidth="260" prefHeight="37"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;" />
            <ComboBox fx:id="cbPayment"
                      promptText="Select Payment Method"
                      prefWidth="260" minWidth="260" maxWidth="260" prefHeight="37"
                      style="-fx-background-radius: 0; -fx-border-radius: 0;" />
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnSave"
                    text="Save"
                    prefWidth="120" prefHeight="40"
                    style="-fx-background-color: #6ac5fe; -fx-text-fill: white; -fx-background-radius: 0;">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button fx:id="btnCancel"
                    text="Cancel"
                    prefWidth="120" prefHeight="40"
                    style="-fx-background-color: #C20010; -fx-text-fill: white; -fx-background-radius: 0;">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>

    </VBox>
</AnchorPane>
