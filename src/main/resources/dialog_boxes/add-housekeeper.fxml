<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="300.0" maxWidth="400.0" minHeight="300.0"
            minWidth="400.0" prefHeight="300.0"
            style="-fx-background-color: white;"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.HousekeeperFormController">
   <VBox layoutX="35.0" layoutY="42.0" prefHeight="217.0" prefWidth="331.0">
      <children>

          <Label text="Add A Housekeeper"
                 style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #45b6fe;"
                 alignment="CENTER"
                 maxWidth="Infinity">
              <VBox.margin>
                  <Insets bottom="20.0"/>
              </VBox.margin>
          </Label>
          <Group>
            <children>

                <VBox alignment="CENTER" spacing="15" prefWidth="331.0">
                    <!-- Name field -->
                    <TextField fx:id="txtName" promptText="Name"
                               prefHeight="37.0" prefWidth="180.0" style="-fx-background-radius: 0; -fx-border-radius: 0;">
                        <padding>
                            <Insets left="10.0" right="10.0"/>
                        </padding>
                    </TextField>

                    <!-- Surname field -->
                    <TextField fx:id="txtSurname" promptText="Surname"
                               prefHeight="37.0" prefWidth="180.0" style="-fx-background-radius: 0; -fx-border-radius: 0;">
                        <padding>
                            <Insets left="10.0" right="10.0"/>
                        </padding>
                    </TextField>
                </VBox>

            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Group>
         <Group>
            <children>

                <Button layoutX="-1.0" onAction="#handleSave"
                        prefHeight="40.0" prefWidth="150.0"
                        text="Save"
                        style="-fx-background-color: #6ac5fe; -fx-text-fill: white; -fx-background-radius: 0;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button layoutX="180.0" onAction="#handleCancel"
                        prefHeight="40.0" prefWidth="150.0"
                        text="Cancel"
                        style="-fx-background-color: #cc000a; -fx-text-fill: white; -fx-background-radius: 0;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

            </children>
         </Group>
      </children>
   </VBox>
</AnchorPane>
