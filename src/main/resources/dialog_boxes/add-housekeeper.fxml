<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="300.0" maxWidth="400.0" minHeight="300.0"
            minWidth="400.0" prefHeight="300.0"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.HousekeeperFormController">
   <VBox layoutX="35.0" layoutY="42.0" prefHeight="217.0" prefWidth="331.0">
      <children>
      
          <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Add a Housekeeper">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <Group>
            <children>
            
                <Label layoutY="5.0" text="Name:" />
                <TextField fx:id="txtName" layoutX="90.0" prefHeight="37.0" prefWidth="240.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </TextField>
            
                <Label layoutY="55.0" text="Surname:" />
                <TextField fx:id="txtSurname" layoutX="90.0" layoutY="50.0" prefHeight="37.0" prefWidth="240.0">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </TextField>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Group>
         <Group>
            <children>
            
                <Button layoutX="-1.0" onAction="#handleSave" prefHeight="40.0" prefWidth="150.0" text="Save">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
                <Button layoutX="180.0" onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" text="Cancel">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </children>
         </Group>
      </children>
   </VBox>
</AnchorPane>
