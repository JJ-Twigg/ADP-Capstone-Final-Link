<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="300.0" maxWidth="400.0" minHeight="300.0" minWidth="400.0" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.HousekeeperFormController">

    <Label alignment="CENTER" layoutX="91.0" layoutY="33.0" maxWidth="Infinity" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #45b6fe;" text="Add A Housekeeper" />
     <!-- Name field -->
     <TextField fx:id="txtName" layoutX="139.0" layoutY="92.0" prefHeight="37.0" prefWidth="180.0" style="-fx-background-radius: 0; -fx-border-radius: 0;">
         <padding>
             <Insets left="10.0" right="10.0" />
         </padding>
     </TextField>

     <!-- Surname field -->
     <TextField fx:id="txtSurname" layoutX="139.0" layoutY="160.0" prefHeight="37.0" prefWidth="180.0" promptText="Surname" style="-fx-background-radius: 0; -fx-border-radius: 0;">
         <padding>
             <Insets left="10.0" right="10.0" />
         </padding>
     </TextField>

    <Button layoutX="34.0" layoutY="232.0" onAction="#handleSave" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #6ac5fe; -fx-text-fill: white; -fx-background-radius: 0;" text="Save">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>

    <Button layoutX="215.0" layoutY="232.0" onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #cc000a; -fx-text-fill: white; -fx-background-radius: 0;" text="Cancel">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
   <Label layoutX="63.0" layoutY="102.0" text="Name:" />
   <Label layoutX="63.0" layoutY="170.0" text="Surname:" />
</AnchorPane>
