<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="400.0" maxWidth="400.0" minHeight="400.0"
            minWidth="400.0" prefHeight="400.0" prefWidth="400.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.AddReservationController">

    <VBox prefHeight="364.0" prefWidth="320.0"
          AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="40.0"
          AnchorPane.rightAnchor="40.0"
          AnchorPane.topAnchor="20.0"
          alignment="CENTER" spacing="20">

        <!-- Heading -->
        <Label text="Add A Reservation"
               alignment="CENTER"
               maxWidth="Infinity"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #45b6fe;"/>

        <!-- Input Fields -->
        <VBox alignment="CENTER" spacing="15">
            <TextField fx:id="startTimeField" promptText="Start Date"
                       prefWidth="260.0" prefHeight="37.0"
                       maxWidth="260.0"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;"/>

            <TextField fx:id="endTimeField" promptText="End Date"
                       prefWidth="260.0" prefHeight="37.0"
                       maxWidth="260.0"
                       style="-fx-background-radius: 0; -fx-border-radius: 0;"/>

            <ComboBox fx:id="comboBoxBookingType" promptText="Select Booking Type"
                      prefWidth="260.0" prefHeight="37.0"
                      maxWidth="260.0"
                      style="-fx-background-radius: 0; -fx-border-radius: 0;"/>

            <ComboBox fx:id="comboBoxNumbers" promptText="Select Room Number"
                      prefWidth="260.0" prefHeight="37.0"
                      maxWidth="260.0"
                      style="-fx-background-radius: 0; -fx-border-radius: 0;"/>

            <ComboBox fx:id="comboBoxEmployee" promptText="Select Employee"
                      prefWidth="260.0" prefHeight="37.0"
                      maxWidth="260.0"
                      style="-fx-background-radius: 0; -fx-border-radius: 0;"/>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="saveButton" text="Save" onAction="#saveReservation"
                    prefWidth="120" prefHeight="37"
                    style="-fx-background-color: #45b6fe; -fx-text-fill: white; -fx-background-radius: 0;"/>

            <Button fx:id="cancelButton" text="Cancel" onAction="#cancel" visible="false"
                    prefWidth="120" prefHeight="37"
                    style="-fx-background-color: #cc000a; -fx-text-fill: white; -fx-background-radius: 0;"/>
        </HBox>

    </VBox>
</AnchorPane>
