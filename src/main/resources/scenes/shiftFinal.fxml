<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="605.0" prefWidth="1030.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.college.controller.ShiftViewController"
      stylesheets="@/css/buttonStyle.css">

    <!-- Sidebar -->
    <VBox prefWidth="230.0"
          alignment="TOP_CENTER"
          spacing="20.0"
          style="-fx-background-color: #66BA88; -fx-padding: 30;">
        <!-- Logo -->
        <ImageView fitHeight="80.0" preserveRatio="true">
            <image>
                <Image url="/images/c.png" />
            </image>
        </ImageView>

        <!-- Buttons -->
        <Button text="Add Shift" onAction="#handleAddShift" styleClass="sidebar-btn" />
        <Button text="Update Shift" onAction="#handleUpdateShift" styleClass="sidebar-btn" />
        <Button text="Delete Shift" onAction="#handleDeleteShift" styleClass="sidebar-btn-danger" />
    </VBox>

    <!-- Main Content -->
    <VBox spacing="20.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" style="-fx-padding: 20;">
        <!-- Centered Heading -->
        <Text text="Shifts"
              style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #383838;" />

        <!-- Table -->
        <TableView fx:id="shiftTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: white; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                <TableColumn fx:id="colEmployee" text="Employee ID" prefWidth="150" />
                <TableColumn fx:id="colEmployeeName" text="Name" prefWidth="150" />
                <TableColumn fx:id="colEmployeeSurname" text="Surname" />
                <TableColumn fx:id="colDate" text="Date" prefWidth="200" />
                <TableColumn fx:id="colStartTime" text="Start Time" prefWidth="150" />
                <TableColumn fx:id="colEndTime" text="End Time" prefWidth="150" />
                <TableColumn fx:id="colOvertime" text="Overtime" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>
</HBox>
