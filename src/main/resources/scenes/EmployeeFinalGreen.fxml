<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="605.0" prefWidth="1030.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.college.controller.EmployeeControllerView"
      stylesheets="/css/buttonStyleFix.css">

    <!-- Sidebar -->
    <VBox prefWidth="260.0"
          alignment="TOP_CENTER"
          spacing="20.0"
          style="-fx-background-color: #66BA88; -fx-padding: 30;">
        <!-- Logo (optional) -->
        <ImageView fitHeight="80.0" preserveRatio="true">
            <image>
                <Image url="/images/c.png" />
            </image>
        </ImageView>

        <!-- Buttons -->



<!--        <Button text="Update Employee" onAction="#updateEmployee"  />-->




        <!-- Uncomment if needed:
        <Button text="Add Employee" onAction="#addEmployee" styleClass="sidebar-btn" />
        <Button text="Delete Employee" onAction="#deleteEmployee" styleClass="sidebar-btn-danger" />
        -->
    </VBox>

    <!-- Main Content -->
    <VBox spacing="20.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" style="-fx-padding: 20;">
        <!-- Centered Heading -->
        <Text text="Employees"
              style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #383838;" />

        <!-- Table -->
        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: white; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="colEmployeeId" text="Employee ID" prefWidth="60" />
                <TableColumn fx:id="colJobType" text="Job Type" prefWidth="150" />
                <TableColumn fx:id="colStartDate" text="Start Date" prefWidth="150" />
                <TableColumn fx:id="colUserId" text="User ID" prefWidth="150" />
            </columns>
        </TableView>
    </VBox>
</HBox>
