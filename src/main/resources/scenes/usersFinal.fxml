<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="605.0" prefWidth="1030.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.UserTableController">

    <!-- Side Pane with Buttons -->
    <Pane prefWidth="230.0" style="-fx-background-color: #45b6fe;"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0">
        <children>
            <ImageView layoutX="63.0" layoutY="26.0">
                <image>
                    <Image url="/images/c.png"/>
                </image>
            </ImageView>

            <!-- might need this later, if we don't want everyone creating employees-->
            <!--            <Button layoutX="40.0" layoutY="193.0" fx:id="btnAdd" onAction="#addUser"-->
            <!--                    prefHeight="40.0" prefWidth="150.0"-->
            <!--                    style="-fx-background-color: #398F6C; -fx-background-radius: 15px;"-->
            <!--                    stylesheets="/css/buttonStyle.css"-->
            <!--                    text="Add User" textFill="WHITE"/>-->

            <Button layoutX="40.0" layoutY="275.0" fx:id="btnEdit" onAction="#updateEmployee"
                    prefHeight="40.0" prefWidth="150.0"
                    style="-fx-background-color: #2fa0e8; -fx-background-radius: 15px;"
                    stylesheets="/css/buttonStyle.css"
                    text="Update User" textFill="WHITE"/>

            <Button layoutX="40.0" layoutY="350.0" fx:id="btnDelete" onAction="#deleteUser"
                    prefHeight="40.0" prefWidth="150.0"
                    style="-fx-background-color: #E02850; -fx-background-radius: 15px;"
                    stylesheets="/css/buttonStyle.css"
                    text="Delete User" textFill="WHITE"/>

            <Label fx:id="labelFeedback" alignment="CENTER" contentDisplay="CENTER"
                   layoutX="10.0" layoutY="420.0" prefHeight="37.0" prefWidth="210.0"
                   text="">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </Label>

        </children>
    </Pane>

    <!-- Title -->

    <HBox AnchorPane.topAnchor="30.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          alignment="CENTER">
        <Text fill="#383838"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Users"
              textAlignment="CENTER">
            <font>
                <Font size="32.0"/>
            </font>
        </Text>
    </HBox>

    <!-- User Table -->
    <TableView fx:id="userTable"
               AnchorPane.topAnchor="100.0"
               AnchorPane.leftAnchor="250.0"
               AnchorPane.rightAnchor="20.0"
               AnchorPane.bottomAnchor="20.0"
               style="-fx-background-color: white; -fx-border-color: transparent;">
        <columns>
            <TableColumn fx:id="userIdColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="120"/>
            <TableColumn fx:id="surnameColumn" text="Surname" prefWidth="120"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
            <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100"/>
            <TableColumn fx:id="ageColumn" text="Age" prefWidth="60"/>
            <TableColumn fx:id="genderColumn" text="Gender" prefWidth="80"/>
        </columns>
    </TableView>

</AnchorPane>
