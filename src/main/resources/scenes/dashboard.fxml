<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.college.controller.DashboardController" stylesheets="@/css/styles.css">

    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #FFFFFF; -fx-border-color: #FFFFFF;" styleClass="scroll-pane" vbarPolicy="AS_NEEDED">

            <AnchorPane>
                <VBox prefWidth="220" spacing="20" style="-fx-background-color: #66BA88; -fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                    <!-- User Profile #66BA88-->
                    <VBox spacing="10" alignment="CENTER">
                        <!-- Profile Image with Circle Clip -->
                        <ImageView fx:id="profileImage" fitWidth="80" fitHeight="80">
                            <image>
                                <Image url="/images/characters/download3.jpg" />
                            </image>
                            <clip>
                                <Circle centerX="40" centerY="40" radius="40"/>
                            </clip>
                        </ImageView>

                        <!-- User Name -->
                        <Label text="John Doe" fx:id="emailLabel"
                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

                        <!-- Role -->
                        <Label text="Administrator" fx:id="roleLabel"
                               style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;" />
                    </VBox>

                    <Separator />

                    <!-- Menu Items -->
                    <VBox spacing="5">
                        <Button onAction="#showOverviewManager" styleClass="menu-button" text="Overview" />

                        <Button onAction="#showProfileManager2" styleClass="menu-button" text="My Profile" />

                        <Button onAction="#showGuestsGreen" styleClass="menu-button" text="Add Reservations" />


                        <Button onAction="#showGuestSolo" styleClass="menu-button" text="Manage Guests" />
                        <Button onAction="#showReservationSolo" styleClass="menu-button" text="Manage Reservation" />
                        <Button onAction="#showEventsSolo" styleClass="menu-button" text="Manage Events" />
                        <Button onAction="#showPaymentsSolo" styleClass="menu-button" text="Manage Payments" />


                        <Button onAction="#showRooms" styleClass="menu-button" text="Rooms" />

                        <Button onAction="#showCustomRooms" styleClass="menu-button" text="Custom Rooms" />
<!--                        <Button onAction="#showPayments" styleClass="menu-button" text="Payments" />-->
                        <Button onAction="#showEmployeesGreen" styleClass="menu-button" text="Employees" />

                        <Button onAction="#showShifts" styleClass="menu-button" text="Shifts" />

                        <Button onAction="#showEmployeeSalary" styleClass="menu-button" text="Employee Salaries" />

                        <Button onAction="#showSearchGuest" styleClass="menu-button" text="Search Guest" />

                        <Button onAction="#showSearchTopPayment" styleClass="menu-button" text="Top Guest Payments" />

                        <Button onAction="#showRestful" styleClass="menu-button" text="RestfulWeb" />

                        <Button onAction="#showFAQ" styleClass="menu-button" text="FAQ" />

                        <Button onAction="#showSignIn" styleClass="menu-button" text="Return To SignIn" />

                    </VBox>

                    <!-- Spacer to push Exit button down -->
                    <Region VBox.vgrow="ALWAYS" />

                    <!-- Exit Button -->
                    <VBox alignment="CENTER" spacing="10">
                        <Separator />
                        <Button onAction="#exitApplication" styleClass="exit-button" text="Exit" />
                    </VBox>
                </VBox>
            </AnchorPane>
        </ScrollPane>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;" />
    </center>
</BorderPane>
