<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="605.0" prefWidth="1030.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.PaymentViewController"
            stylesheets="@/css/buttonStyle.css"
>

    <!-- Sidebar (fixed) -->
    <Pane fx:id="sidebar"
          prefWidth="220.0"
          minWidth="220.0"
          style="-fx-background-color: #66BA88;"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0">
        <children>
            <VBox layoutX="15.0" layoutY="40.0" spacing="20.0" alignment="TOP_CENTER">

                <!-- Logo -->
                <ImageView fitHeight="80.0" preserveRatio="true">
                    <image>
                        <Image url="/images/c.png" />
                    </image>
                </ImageView>

                <!-- Buttons -->
                <Button onAction="#searchTopPayments"
                        prefHeight="40.0" prefWidth="180.0"
                        text="Search Top Payments"
                        textFill="WHITE"
                        style="-fx-background-color: #398F6C; -fx-background-radius: 10px;" />
            </VBox>
        </children>
    </Pane>

    <!-- Header -->
    <HBox alignment="CENTER"
          AnchorPane.topAnchor="25.0"
          AnchorPane.leftAnchor="250.0"
          AnchorPane.rightAnchor="0.0">
        <Text text="Payments"
              fill="#383838"
              style="-fx-font-size: 32px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Table -->
    <TableView fx:id="paymentTable"
               AnchorPane.topAnchor="90.0"
               AnchorPane.leftAnchor="250.0"
               AnchorPane.rightAnchor="20.0"
               AnchorPane.bottomAnchor="20.0"
               style="-fx-background-color: white; -fx-border-color: transparent;">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colGuestId" text="Guest ID" />
            <TableColumn fx:id="colAmount" text="Amount" />
            <TableColumn fx:id="colMethod" text="Method" />
            <TableColumn fx:id="colStatus" text="Status" />
            <TableColumn fx:id="colDate" text="Date" />
        </columns>
    </TableView>

</AnchorPane>
