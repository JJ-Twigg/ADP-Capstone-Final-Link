<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.RestFinalController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #e0e7ff);">

    <children>
        <!-- Center everything -->
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <!-- Main card -->
                <VBox alignment="CENTER" spacing="20" maxWidth="500" maxHeight="450"
                      style="
                        -fx-background-color: white;
                        -fx-background-radius: 2; /* less rounded */
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 5);
                        -fx-padding: 30;">

                    <Label text="Restful Web Service Demo"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="15">
                        <Button text="User Hello" fx:id="btnUser" onAction="#callUserHello"
                                style="-fx-background-color: #4f46e5;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-background-radius: 10;
                                       -fx-padding: 10 25;
                                       -fx-cursor: hand;"/>

                        <Button text="Manager Hello" fx:id="btnManager" onAction="#callManagerHello"
                                style="-fx-background-color: #3b82f6;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-background-radius: 10;
                                       -fx-padding: 10 25;
                                       -fx-cursor: hand;"/>

                        <Button text="Admin Hello" fx:id="btnAdmin" onAction="#callAdminHello"
                                style="-fx-background-color: #10b981;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-background-radius: 10;
                                       -fx-padding: 10 25;
                                       -fx-cursor: hand;"/>
                    </HBox>

                    <!-- Response area -->
                    <TextArea fx:id="txtResponse"
                              prefHeight="200" prefWidth="450"
                              wrapText="true" editable="false"
                              style="
                                -fx-background-color: #f9fafb;
                                -fx-border-color: #d1d5db;
                                -fx-border-radius: 10;
                                -fx-background-radius: 10;
                                -fx-padding: 8;
                                -fx-text-alignment: center;" />
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
