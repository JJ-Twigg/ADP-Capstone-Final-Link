<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.college.controller.DashboardController" stylesheets="@/css/styles.css">

    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #FFFFFF; -fx-border-color: #FFFFFF;" styleClass="scroll-pane" vbarPolicy="AS_NEEDED">

            <AnchorPane>
                <VBox prefWidth="220" spacing="20" style="-fx-background-color: #66BA88; -fx-padding: 20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                    <!-- User Profile -->
                    <VBox spacing="10" alignment="CENTER">
                        <!-- Profile Image with Circle Clip -->
                        <ImageView fx:id="profileImage" fitWidth="80" fitHeight="80">
                            <image>
                                <Image url="/images/characters/download4.jpg" />
                            </image>
                            <clip>
                                <Circle centerX="40" centerY="40" radius="40"/>
                            </clip>
                        </ImageView>

                        <!-- User Name -->
                        <Label text="John Doe" fx:id="emailLabel"
                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

                        <!-- Role -->
                        <Label text="Administrator" fx:id="roleLabel"
                               style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;" />
                    </VBox>

                    <Separator />

                    <!-- Menu Items -->
                    <VBox spacing="5">
                        <Button onAction="#showOverviewUser" styleClass="menu-button" text="Overview" />
                        <Button onAction="#showShiftsUser" styleClass="menu-button" text="Shifts" />
                        <Button onAction="#showSignIn" styleClass="menu-button" text="Return To SignIn" />
<!--                        <Button onAction="#showGuests" styleClass="menu-button" text=" Add Guest Reservation" />-->
<!--                        <Button onAction="#showReservation" styleClass="menu-button" text="Add Reservation" />-->
<!--                        <Button onAction="#showRooms" styleClass="menu-button" text="Rooms" />-->
<!--                        <Button onAction="#showPayments" styleClass="menu-button" text="Payments" />-->
<!--                        <Button onAction="#showEmployees" styleClass="menu-button" text="Employees" />-->
<!--                        <Button onAction="#showVenues" styleClass="menu-button" text="Venues" />-->
<!--                        <Button onAction="#showVenues" styleClass="menu-button" text="Shifts" />-->
                    </VBox>

                    <!-- Spacer to push Exit button down -->
                    <Region VBox.vgrow="ALWAYS" />

                    <!-- Exit Button -->
                    <VBox alignment="CENTER" spacing="10">
                        <Separator />
                        <Button onAction="#exitApplication" styleClass="exit-button" text="Exit" />
                    </VBox>
                </VBox>
            </AnchorPane>
        </ScrollPane>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;" />
    </center>
</BorderPane>
