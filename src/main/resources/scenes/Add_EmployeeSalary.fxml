<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.AddEmployeeSalaryController">

    <!-- Heading -->
    <Label layoutX="400.0" layoutY="40.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"
           text="Add Employee Salary"/>

    <!-- Amount -->
    <Label layoutX="300.0" layoutY="120.0" text="Amount:"/>
    <TextField fx:id="txtAmount" layoutX="425.0" layoutY="116.0" prefWidth="200.0"/>

    <!-- Employee -->
    <Label layoutX="300.0" layoutY="160.0" text="Employee:"/>
    <ComboBox fx:id="employeeComboBox" layoutX="425.0" layoutY="156.0" prefWidth="200.0" promptText="Select Employee"/>

    <!-- Payment Method -->
    <Label layoutX="300.0" layoutY="200.0" text="Method:"/>
    <ChoiceBox fx:id="choiceMethod" layoutX="425.0" layoutY="196.0" prefWidth="150.0"/>

    <!-- Date -->
    <Label layoutX="300.0" layoutY="240.0" text="Date:"/>
    <DatePicker fx:id="datePicker" layoutX="425.0" layoutY="236.0" prefWidth="200.0"/>

    <!-- Buttons -->
    <Button fx:id="btnSave" layoutX="356.0" layoutY="320.0" prefHeight="40.0" prefWidth="120.0"
            style="-fx-background-color: #398F6C;" stylesheets="/css/buttonStyle.css"
            text="Save" textFill="WHITE" onAction="#handleSave"/>
    <Button fx:id="btnCancel" layoutX="540.0" layoutY="320.0" prefHeight="40.0" prefWidth="120.0"
            style="-fx-background-color: #E02850;" stylesheets="/css/buttonStyle.css"
            text="Cancel" textFill="WHITE" onAction="#handleCancel"/>

</AnchorPane>
