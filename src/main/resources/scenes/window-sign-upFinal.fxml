<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<HBox fx:id="mainFrame" maxHeight="600.0" maxWidth="600.0"
      minHeight="400.0" minWidth="600.0"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.college.controller.UserRegisterController">

    <!-- Left green panel with logo -->
    <VBox alignment="CENTER" prefWidth="220.0" style="-fx-background-color: #66BA88;" spacing="20.0" >
        <ImageView fitHeight="186.0" fitWidth="177.0" pickOnBounds="true">
            <image>
                <Image url="/images/c.png"/>
            </image>
        </ImageView>
        <Label text="Hotel Management System" textFill="WHITE" alignment="CENTER">
            <font>
                <Font size="15"/>
            </font>
        </Label>
        <Label text="HMS" textFill="WHITE" alignment="CENTER"/>
    </VBox>

    <!-- Right white panel with input fields -->
    <VBox alignment="CENTER" prefWidth="380.0" spacing="10.0" style="-fx-background-color: WHITE;" >
        <Label text="Sign Up" textFill="BLACK" alignment="CENTER">
            <font>
                <Font size="30"/>
            </font>
        </Label>

        <TextField fx:id="username" promptText="Email" prefWidth="250" prefHeight="40"/>
        <PasswordField fx:id="password" promptText="Password" prefWidth="250" prefHeight="40"/>
        <TextField fx:id="nameField" promptText="First Name" prefWidth="250" prefHeight="40"/>
        <TextField fx:id="surnameField" promptText="Surname" prefWidth="250" prefHeight="40"/>
        <TextField fx:id="ageField" promptText="Age" prefWidth="250" prefHeight="40"/>
        <TextField fx:id="genderField" promptText="Gender" prefWidth="250" prefHeight="40"/>

        <!-- ComboBox -->
        <ComboBox fx:id="roleComboBox" prefWidth="250" prefHeight="40">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ADMIN"/>
                    <String fx:value="MANAGER"/>
                    <String fx:value="USER"/>
                </FXCollections>
            </items>
        </ComboBox>


        <ComboBox fx:id="otherRoleComboBox" prefWidth="250.0" prefHeight="40.0" visible="false">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="FoodWorker"/>
                    <String fx:value="MaintenanceWorker"/>
                    <String fx:value="Housekeeper"/>
                </FXCollections>
            </items>
        </ComboBox>










        <Button text="Sign Up" onAction="#handleSignUp"
                style="-fx-background-color: #66BA88; -fx-text-fill: white;"
                prefWidth="250" prefHeight="40">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Hyperlink text="Already have an account?" onAction="#goToLogin"/>
        <Button text="Exit" onAction="#handleExit"
                style="-fx-background-color: #cc000a; -fx-text-fill: white;"
                prefWidth="250" prefHeight="40">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Label fx:id="output_message" text="_temp_" textFill="RED" alignment="CENTER"/>
    </VBox>
</HBox>
