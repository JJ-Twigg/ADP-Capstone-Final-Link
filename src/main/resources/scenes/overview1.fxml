<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: white; -fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.college.controller.OverviewController">

    <AnchorPane style="-fx-padding: 20; -fx-background-color: white;">
        <VBox alignment="CENTER" spacing="40" style="-fx-background-color: white;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- Header -->
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #398F6C;" text="Dashboard Overview" />

            <!-- Top Row: 3 Statistic Blocks -->
            <HBox alignment="CENTER" spacing="30">
                <!-- Total Guests -->
                <VBox alignment="CENTER" spacing="10">
                    <VBox style="
    -fx-background-color: linear-gradient(
    from 0% 0% to 100% 100%,
    rgba(69, 182, 254, 0.3),   /* lighter blue */
    rgba(69, 182, 254, 0.9)    /* main blue */

);
        -fx-padding: 20;
        -fx-spacing: 10;
        -fx-min-width: 220;
        -fx-pref-height: 180;
        -fx-alignment: center;
        -fx-background-radius: 12;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">

                        <Label style="-fx-font-size: 30px; -fx-text-fill: white;" text="ðŸ‘¥" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Current Reservations" />
                        <Label fx:id="currentGuestsLabel" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="1,247" />
                        <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;" text="12,000 total guests" />
                    </VBox>
                </VBox>

                <!-- Total Revenue -->
                <VBox alignment="CENTER" spacing="10">
                    <VBox style="
      -fx-background-color: linear-gradient(
    from 0% 0% to 100% 100%,
    rgba(69, 182, 254, 0.3),   /* lighter blue */
    rgba(69, 182, 254, 0.9)    /* main blue */

);
        -fx-padding: 20;
        -fx-spacing: 10;
        -fx-min-width: 220;
        -fx-pref-height: 180;
        -fx-alignment: center;
        -fx-background-radius: 12;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">
                        <Label style="-fx-font-size: 30px; -fx-text-fill: white;" text="ðŸ’°" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Total Revenue" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="R 245,800" />
                        <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;" text="R 1,200,000 total revenue" />
                    </VBox>
                </VBox>

                <!-- Occupancy Rate -->
                <VBox alignment="CENTER" spacing="10">
                    <VBox style="
       -fx-background-color: linear-gradient(
    from 0% 0% to 100% 100%,
    rgba(69, 182, 254, 0.3),   /* lighter blue */
    rgba(69, 182, 254, 0.9)    /* main blue */

);
        -fx-padding: 20;
        -fx-spacing: 10;
        -fx-min-width: 220;
        -fx-pref-height: 180;
        -fx-alignment: center;
        -fx-background-radius: 12;
        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">
                        <Label style="-fx-font-size: 30px; -fx-text-fill: white;" text="ðŸ“Š" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Total Employees" />
                        <Label fx:id="EmployeeLabel" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="72%" />
                        <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;" text="Avg. last 12 months" />
                    </VBox>
                </VBox>
            </HBox>

            <!-- Bottom Row: 2 Charts -->
            <!-- Employees Chart -->
            <HBox alignment="CENTER" spacing="30">
                <!-- Employees Chart -->
                <BarChart fx:id="totalGuestsChart" title="Total Employees" prefHeight="300" prefWidth="450">
                    <xAxis>
                        <CategoryAxis label="Month" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Number of Employees" />
                    </yAxis>
                </BarChart>

                <!-- Revenue Chart -->
                <BarChart fx:id="revenueBarChart" title="Total Revenue" prefHeight="300" prefWidth="450">
                    <xAxis>
                        <CategoryAxis label="Month" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Revenue (R)" />
                    </yAxis>
                </BarChart>
            </HBox>



        </VBox>
    </AnchorPane>
</ScrollPane>
