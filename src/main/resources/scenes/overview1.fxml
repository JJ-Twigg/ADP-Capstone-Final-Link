<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: white;"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.college.controller.OverviewController">

    <AnchorPane style="-fx-padding: 20; -fx-background-color: white;">
        <VBox alignment="TOP_CENTER" spacing="40" style="-fx-background-color: white;"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              VBox.vgrow="ALWAYS">

            <!-- Header -->
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #398F6C;" text="Dashboard Overview" />

            <!-- Top Row: 3 Statistic Blocks -->
            <HBox alignment="CENTER" spacing="30">

                <!-- Total Guests -->
                <VBox alignment="CENTER" spacing="10">
                    <VBox style="
                        -fx-background-color: linear-gradient(
                            from 0% 0% to 100% 100%,
                            rgba(69, 182, 254, 0.3),
                            rgba(69, 182, 254, 0.9)
                        );
                        -fx-padding: 20;
                        -fx-spacing: 10;
                        -fx-alignment: center;
                        -fx-background-radius: 12;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);
                        "
                          prefWidth="220" prefHeight="180">
                        <Label style="-fx-font-size: 30px; -fx-text-fill: white;" text="👥" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Current Reservations" />
                        <Label fx:id="currentGuestsLabel" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="1,247" />
                        <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;" text="12,000 total guests" />
                    </VBox>
                </VBox>

                <!-- Total Revenue -->
                <VBox alignment="CENTER" spacing="10">
                    <VBox style="
                        -fx-background-color: linear-gradient(
                            from 0% 0% to 100% 100%,
                            rgba(69, 182, 254, 0.3),
                            rgba(69, 182, 254, 0.9)
                        );
                        -fx-padding: 20;
                        -fx-spacing: 10;
                        -fx-alignment: center;
                        -fx-background-radius: 12;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);
                        "
                          prefWidth="300" prefHeight="180">
                        <Label style="-fx-font-size: 30px; -fx-text-fill: white;" text="💰" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" alignment="CENTER" text="Total Revenue" />
                        <Label fx:id="revenueLabel" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="R 245,800" />
                        <Label visible="false" style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;" text="Avg. last 12 months" />
                    </VBox>
                </VBox>

                <!-- Occupancy Rate -->
                <VBox alignment="CENTER" spacing="10">
                    <VBox style="
                        -fx-background-color: linear-gradient(
                            from 0% 0% to 100% 100%,
                            rgba(69, 182, 254, 0.3),
                            rgba(69, 182, 254, 0.9)
                        );
                        -fx-padding: 20;
                        -fx-spacing: 10;
                        -fx-alignment: center;
                        -fx-background-radius: 12;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);
                        "
                          prefWidth="220" prefHeight="180">
                        <Label style="-fx-font-size: 30px; -fx-text-fill: white;" text="📊" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Total Employees" />
                        <Label fx:id="EmployeeLabel" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="72%" />
                        <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;" text="Avg. last 12 months" />
                    </VBox>
                </VBox>

            </HBox>

            <!-- Bottom Row: 2 Pie Charts -->
            <HBox alignment="CENTER" spacing="30">

                <!-- Employees Pie Chart -->
                <VBox style="-fx-background-color: #ffffff;
                     -fx-border-color: #27ae60;
                     -fx-border-width: 2;
                     -fx-border-radius: 15;
                     -fx-background-radius: 15;
                     -fx-padding: 10;"
                      alignment="CENTER"
                      prefWidth="350" prefHeight="300">
                    <PieChart fx:id="totalEmployeesPieChart" title="Total Employees" prefHeight="300" prefWidth="350"/>
                </VBox>

                <!-- Reservations Pie Chart -->
                <VBox style="-fx-background-color: #ffffff;
                     -fx-border-color: #27ae60;
                     -fx-border-width: 2;
                     -fx-border-radius: 15;
                     -fx-background-radius: 15;
                     -fx-padding: 10;"
                      alignment="CENTER"
                      prefWidth="350" prefHeight="300">
                    <PieChart fx:id="reservationsPieChart" title="Reservations" prefHeight="300" prefWidth="350"/>
                </VBox>

            </HBox>

            <!-- Monthly Revenue BarChart -->
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
                <BarChart fx:id="monthlyEarningsBarChart" title="Total Revenue" VBox.vgrow="ALWAYS" prefWidth="750">
                    <xAxis>
                        <CategoryAxis fx:id="monthsAxis" label="Month"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="earningsAxis" label="Earnings (k)"/>
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Clock -->
            <HBox fx:id="clockBox" alignment="CENTER" spacing="10" maxWidth="400"
                  style="-fx-background-color: #66BA88; -fx-background-radius: 12; -fx-padding: 10;"
                  AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20">
                <Label text="⏰" style="-fx-font-size: 24px;" />
                <Label fx:id="clockLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
            </HBox>

        </VBox>
    </AnchorPane>
</ScrollPane>
