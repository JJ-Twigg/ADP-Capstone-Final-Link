<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1001.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.HousekeeperViewController">

    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="1000.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: #26AD00;" text="Housekeepers" textFill="WHITE">
      <padding>
         <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
      </padding></Label>

    <TableView fx:id="housekeeperTable" layoutX="57.0" layoutY="84.0" prefHeight="300.0" prefWidth="900.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="300.0" text="Name" />
            <TableColumn fx:id="colSurname" prefWidth="300.0" text="Surname" />
        </columns>
    </TableView>
   <HBox alignment="BOTTOM_CENTER" layoutX="245.0" layoutY="437.0">
      <children>
      
                      <Button onAction="#handleAdd" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #26AD00" text="Add" textFill="white">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
          <Button onAction="#handleUpdate" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #26AD00" text="Edit" textFill="white">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
          <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleDelete" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #C20010" text="Delete" textFill="white">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
</AnchorPane>
