<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="605.0" prefWidth="1030.0"
      style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.college.controller.PaymentViewController"
      stylesheets="/css/buttonStyle.css">

    <!-- Sidebar -->
    <VBox prefWidth="270.0" spacing="20.0" alignment="TOP_CENTER"
          style="-fx-background-color: #45b6fe; -fx-padding: 30;">
        <!-- Logo -->
        <ImageView fitHeight="80.0" preserveRatio="true">
            <image>
                <Image url="/images/c.png"/>
            </image>
        </ImageView>

        <!-- Buttons -->
        <VBox spacing="10.0" alignment="TOP_CENTER">
            <Button fx:id="btnPrintAll" text="Print Payments" onAction="#handlePrintAllPayments" styleClass="sidebar-btn"      prefHeight="40.0" prefWidth="150.0"  style="-fx-background-color: #2fa0e8; -fx-text-fill: white;-fx-background-radius: 20px;"/>
            <!-- Add more buttons here if needed -->
        </VBox>
    </VBox>

    <!-- Main Content -->
    <VBox spacing="20.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" style="-fx-padding: 20;">
        <!-- Centered Heading -->
        <Text text="Payments"
              style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #383838;"
              textAlignment="CENTER"/>

        <!-- Table -->
        <TableView fx:id="paymentTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: white; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colGuestId" text="Guest ID" prefWidth="100"/>
                <TableColumn fx:id="colAmount" text="Amount" prefWidth="150"/>
                <TableColumn fx:id="colMethod" text="Method" prefWidth="150"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</HBox>
