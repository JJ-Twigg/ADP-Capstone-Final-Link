<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="605.0" prefWidth="1030.0"
      style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.college.controller.GuestUIController"
      stylesheets="@/css/buttonStyle.css">

    <!-- Sidebar -->
    <VBox prefWidth="230.0" spacing="20.0" alignment="TOP_CENTER"
          style="-fx-background-color: #66BA88; -fx-padding: 30;">
        <!-- Logo -->
        <ImageView fitHeight="80.0" preserveRatio="true">
            <image>
                <Image url="/images/c.png"/>
            </image>
        </ImageView>

        <!-- Buttons -->
        <VBox spacing="10.0" alignment="TOP_CENTER">
            <Button fx:id="btnAddGuest" text="Add Guest" onAction="#handleAddGuest" styleClass="sidebar-btn"/>
            <!-- Add more buttons here if needed -->
        </VBox>
    </VBox>

    <!-- Main Content -->
    <VBox spacing="20.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" style="-fx-padding: 20;">
        <!-- Centered Heading -->
        <Text text="Guests"
              style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #383838;"
              textAlignment="CENTER"/>

        <!-- Table -->
        <TableView fx:id="guestTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: white; -fx-border-color: transparent;">
            <columns>
                <TableColumn fx:id="colGuestID" text="GuestID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colSurname" text="Surname" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                <TableColumn fx:id="colContact" text="Contact" prefWidth="200"/>
                <TableColumn fx:id="colPayment" text="Payment Method" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</HBox>
