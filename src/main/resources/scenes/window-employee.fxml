<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-font-family: 'Roboto', 'Helvetica', 'Arial', sans-serif" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.EmployeeControllerView">

    <!-- Heading -->
    <Label alignment="CENTER" layoutY="20.0" prefHeight="49.5" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: #26AD00;-fx-text-fill: white;" text="Employee" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

    <!-- Table -->
    <TableView fx:id="foodWorkerTable" layoutX="40.0" layoutY="71.0" prefHeight="349.0" prefWidth="926.0">
        <columns>
            <TableColumn fx:id="colId" editable="false" maxWidth="400.0" minWidth="100.0" prefWidth="200.0" text="Employee Id" />
            <TableColumn fx:id="colType" editable="false" maxWidth="400.0" minWidth="100.0" prefWidth="265.33331298828125" text="First names" />
            <TableColumn fx:id="colSpecialization" editable="false" maxWidth="400.0" minWidth="100.0" prefWidth="178.66668701171875" text="Last name" />
            <TableColumn fx:id="time" editable="false" maxWidth="400.0" minWidth="100.0" prefWidth="266.0" text="Register date" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="210.0" layoutY="470.0" onAction="#addWorker" prefHeight="40.0" prefWidth="150.0" styleClass="button" text="Add Employee" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
    <Button layoutX="435.0" layoutY="470.0" onAction="#updateWorker" prefHeight="40.0" prefWidth="150.0" styleClass="button" text="Update Employee" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
    <Button layoutX="666.0" layoutY="470.0" onAction="#deleteWorker" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #C20010;" text="Delete Employee" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>

</AnchorPane>
