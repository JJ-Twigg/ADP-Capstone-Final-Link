<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.EventUIController">

    <top>
        <Label text="Event Management"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Input Fields -->
            <HBox spacing="10">
                <Label text="Reason:"/>
                <TextField fx:id="reasonField" promptText="Holiday, Work, etc."/>
                <Label text="Description:"/>
                <TextField fx:id="descriptionField" promptText="Optional details"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="eventTable" prefHeight="400" prefWidth="800">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colReason" text="Reason" prefWidth="200"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="550"/>
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Event" onAction="#handleAddEvent"
                        style="-fx-background-color: #26AD00;" textFill="WHITE" prefWidth="150" prefHeight="40"/>
                <Button text="Edit Event" onAction="#handleEditEvent"
                        style="-fx-background-color: #26AD00;" textFill="WHITE" prefWidth="150" prefHeight="40"/>
                <Button text="Delete Event" onAction="#handleDeleteEvent"
                        style="-fx-background-color: #C20010;" textFill="WHITE" prefWidth="150" prefHeight="40"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
