<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.college.controller.EventUIController">

    <top>
        <Label alignment="CENTER" prefHeight="55.0" prefWidth="1000.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10; -fx-background-color: #26AD00;" text="Event Management" textFill="WHITE" />
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Input Fields -->
            <HBox spacing="10">
                <Label text="Reason:" />
                <TextField fx:id="reasonField" promptText="Holiday, Work, etc." />
                <Label text="Description:" />
                <TextField fx:id="descriptionField" promptText="Optional details" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="eventTable" prefHeight="400" prefWidth="800">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colReason" prefWidth="200" text="Reason" />
                    <TableColumn fx:id="colDescription" prefWidth="550" text="Description" />
                </columns>
            </TableView>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#handleAddEvent" prefHeight="40" prefWidth="150" style="-fx-background-color: #26AD00;" text="Add Event" textFill="WHITE" />
                <Button onAction="#handleEditEvent" prefHeight="40" prefWidth="150" style="-fx-background-color: #26AD00;" text="Edit Event" textFill="WHITE" />
                <Button onAction="#handleDeleteEvent" prefHeight="40" prefWidth="150" style="-fx-background-color: #C20010;" text="Delete Event" textFill="WHITE" />
            </HBox>

        </VBox>
    </center>
</BorderPane>
