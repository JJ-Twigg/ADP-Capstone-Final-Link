<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.MaintenanceWorkerFormController">

    <Label layoutX="130.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Worker Form"/>

    <Label layoutX="50.0" layoutY="70.0" text="External:"/>
    <CheckBox fx:id="chkExternal" layoutX="150.0" layoutY="65.0"/>

    <Label layoutX="50.0" layoutY="110.0" text="Company:"/>
    <TextField fx:id="txtCompany" layoutX="150.0" layoutY="105.0" prefWidth="200.0"/>

    <Label layoutX="50.0" layoutY="150.0" text="Type:"/>
    <TextField fx:id="txtType" layoutX="150.0" layoutY="145.0" prefWidth="200.0"/>

    <Button layoutX="150.0" layoutY="200.0" text="Save" onAction="#handleSave"/>
    <Button layoutX="230.0" layoutY="200.0" text="Cancel" onAction="#handleCancel"/>
</AnchorPane>