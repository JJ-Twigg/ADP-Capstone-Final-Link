<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.controller.ShiftUpdateController">

    <!-- Heading -->
    <Label layoutX="400.0" layoutY="40.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Update Shift" />

    <Label layoutX="300.0" layoutY="120.0" text="Shift Date:" />
    <DatePicker fx:id="datePicker" layoutX="400.0" layoutY="115.0" prefWidth="200.0" />

    <!-- Start Time -->
    <Label layoutX="300.0" layoutY="180.0" text="Start Time:" />
    <Spinner fx:id="spinnerStartHour" layoutX="400.0" layoutY="175.0" prefWidth="80.0" />
    <Label layoutX="485.0" layoutY="180.0" text=":" />
    <Spinner fx:id="spinnerStartMinute" layoutX="500.0" layoutY="175.0" prefWidth="80.0" />

    <!-- End Time -->
    <Label layoutX="300.0" layoutY="240.0" text="End Time:" />
    <Spinner fx:id="spinnerEndHour" layoutX="400.0" layoutY="235.0" prefWidth="80.0" />
    <Label layoutX="485.0" layoutY="240.0" text=":" />
    <Spinner fx:id="spinnerEndMinute" layoutX="500.0" layoutY="235.0" prefWidth="80.0" />

    <!-- Overtime -->
    <Label layoutX="300.0" layoutY="300.0" text="Overtime:" />
    <CheckBox fx:id="chkOvertime" layoutX="400.0" layoutY="300.0" />

    <!-- Buttons -->
    <Button fx:id="btnSave" layoutX="356.0" layoutY="380.0" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #26AD00;" text="Save" textFill="WHITE" />
    <Button fx:id="btnCancel" layoutX="540.0" layoutY="380.0" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #C20010;" text="Cancel" textFill="WHITE" />

